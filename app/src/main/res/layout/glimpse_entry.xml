<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="1"
    android:padding="10dp"
    android:layout_marginLeft="10dp">

    <Button
        android:id="@+id/glimpse_day"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@color/colorPrimary"
        android:padding="10dp"
        android:text="1"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@color/colorAccent"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:gravity="start"
        android:orientation="vertical"
        android:touchscreenBlocksFocus="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:id="@+id/icon_world"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_weight="0.15"
                app:srcCompat="@mipmap/ic_world" />

            <TextView
                android:id="@+id/title_world"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.85"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="World history title"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/colorTextEmphasis" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:id="@+id/icon_phil"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_weight="0.15"
                app:srcCompat="@mipmap/ic_phil" />

            <TextView
                android:id="@+id/title_phil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.85"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Philippine history title"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/colorTextEmphasis" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
